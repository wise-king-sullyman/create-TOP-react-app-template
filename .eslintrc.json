{
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:react-hooks/recommended",
    "prettier"
  ],
  "overrides": [
    {
      "files": [
        "**/*.spec.js",
        "**/*.spec.jsx",
        "*.test.js"
      ],
      "env": {
        "jest": true
      }
    }
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "plugins": ["react", "react-hooks", "import", "prettier", "promise"],
  "rules": {
    "arrow-body-style": ["error", "as-needed"],
    "camelcase": [
      "error",
      {
        "ignoreDestructuring": true
      }
    ],
    "curly": "error",
    "dot-notation": "error",
    "eqeqeq": ["error", "smart"],
    "guard-for-in": "error",
    "max-classes-per-file": ["error", 1],
    "no-nested-ternary": "error",
    "no-bitwise": "error",
    "no-caller": "error",
    "no-eval": "error",
    "no-new-wrappers": "error",
    "no-unused-expressions": [
      "error",
      {
        "allowTernary": true,
        "allowShortCircuit": true
      }
    ],
    "no-var": "error",
    "object-shorthand": "error",
    "one-var": ["error", "never"],
    "prefer-const": "error",
    "react/prop-types": 0,
    "react-hooks/exhaustive-deps": "warn",
    "react/no-unescaped-entities": ["error", { "forbid": [">", "}"] }],
    "spaced-comment": "error"
  }
}
